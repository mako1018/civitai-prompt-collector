# Normalize line endings and keep consistent in repo
* text=auto

# Scripts and code use LF
*.sh  text eol=lf
*.py  text eol=lf
*.md  text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.ipynb text eol=lf

# Windows-specific scripts use CRLF
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf